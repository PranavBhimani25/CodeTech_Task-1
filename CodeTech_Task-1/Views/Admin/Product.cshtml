@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor

@model List<Product>
@{
    Layout = "User_Layout";
    ViewData["Title"] = "Product List";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h2>Product List</h2>
    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addProductModal">
        Add New Product
    </button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ProductId</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>CategoryId</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.CategoryId</td>
                    <th>
                        <a asp-action="NewPerson" asp-controller="Home" asp-route-id="@item.ProductId">Edit</a>
                    </th>
                    <th>
                        <a asp-action="DeletePerson" asp-controller="Home" asp-route-id="@item.ProductId">Delete</a>
                    </th>

                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Add Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addProductForm">
                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Description</label>
                        <textarea name="Description" class="form-control" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Price</label>
                        <input type="number" name="Price" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Category_Id</label>
                        <textarea name="Category_Id" class="form-control" required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-success">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#addProductForm").submit(function (e) {
        e.preventDefault();
        var form = $(this);
        $.ajax({
            type: "POST",
            url: '@Url.Action("AddProduct", "Admin")',
            data: form.serialize(),
            success: function (response) {
                if (response.success) {
                    location.reload();
                }
            }
        });
    });
</script>

