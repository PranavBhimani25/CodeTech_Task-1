@model List<CodeTech_Task_1.Models.Order>

@{
    ViewData["Title"] = "Order History";
    Layout = "User_Layout";
}

<h2>Order History</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">You have no orders yet.</div>
}
else
{
    foreach (var order in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>Order ID:</strong> @order.Id |
                <strong>Date:</strong> @order.OrderDate.ToLocalTime().ToString("g") |
                <strong>Status:</strong> <span class="text-danger">@order.Status </span>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.OrderItems)
                        {
                            <tr>
                                <td>@item.Product?.Name</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.UnitPrice * item.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-end">
                    <strong>Total Amount:</strong> @order.TotalAmount.ToString("C")
                </div>
            </div>
        </div>
    }
}
